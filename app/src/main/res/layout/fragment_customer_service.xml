<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5sp"
   >

    <!-- Navbar -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="415dp"
            android:layout_height="738dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:text="Help Centre"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="397dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="6sp"
                android:text="Welcome to the contact Customer Service, we're available 24 hours a day."
                android:textColor="#493E3E"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="278dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:text="Call us : +91 9399480965"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="51dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/baseline_phone_24" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Email: vowvenueofficial@gmail.com"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_email_24"
                    android:backgroundTint="@color/black"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="565dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="381dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:text="Follow Us On"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_marginHorizontal="25sp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageView"
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/instagicon"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <ImageButton
                            android:id="@+id/imageView3"
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30sp"
                            android:background="@drawable/linkedinicon"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <ImageButton
                            android:id="@+id/imageView7"
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30sp"
                            android:background="@drawable/twittericon"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                        <ImageButton
                            android:id="@+id/imageView17"
                            android:layout_width="57dp"
                            android:layout_height="57dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30sp"
                            android:background="@drawable/whatsappicon"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:text="Write us :"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/customerquery"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginTop="160dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Write your query"
                    android:inputType="text"
                    android:lines="6"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sendbtncontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="300dp"
                    android:text="Send" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>