<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginHorizontal="5sp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">










        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:iconifiedByDefault="false"
            app:queryHint="Search Your Vow Caters Here"
            app:queryBackground="@android:color/transparent"
            style="@style/CustomSearchViewStyle"
            android:textColorHint="@color/white"
            ></androidx.appcompat.widget.SearchView>



        <LinearLayout

            android:orientation="horizontal"
            android:layout_marginVertical="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sortbtn"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5sp"
                android:background="@drawable/strokesgray"
                android:drawableEnd="@drawable/sort_24"
                android:drawablePadding="-24sp"
                android:drawableTint="#3b3b3b"
                android:fontFamily="@font/arial"
                android:text="Sort"
                android:textAllCaps="false"
                android:textColor="#3b3b3b"
                tools:ignore="TouchTargetSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/localitybtn"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/strokesgray"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                android:drawablePadding="-24sp"
                android:layout_marginHorizontal="5sp"

                android:drawableTint="#3b3b3b"
                android:text="Locality"
                android:textAllCaps="false"
                android:textColor="#3b3b3b"
                tools:ignore="TouchTargetSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pricebtn"
                android:layout_width="110dp"
                android:layout_height="40sp"
                android:background="@drawable/strokesgray"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                android:drawablePadding="-24sp"
                android:drawableTint="#3b3b3b"
                android:text="Price"
                android:layout_marginHorizontal="5sp"

                android:textAllCaps="false"
                android:textColor="#3b3b3b"
                tools:ignore="TouchTargetSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <ImageButton
                android:id="@+id/filerbtn"
                android:layout_marginHorizontal="5sp"

                android:layout_width="50dp"
                android:layout_height="40sp"
                android:background="@drawable/filtericonvertical"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></ImageButton>



        </LinearLayout>
        <LinearLayout
            android:background="@drawable/coordinatorbg"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/headingoffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="ðŸ’¥LatestðŸ’¥ OffersðŸ’¥"
                android:textColor="@color/black"
                android:textSize="17dp" />
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recyclerviewlatest"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>





        </LinearLayout>

    </LinearLayout>
</layout>



