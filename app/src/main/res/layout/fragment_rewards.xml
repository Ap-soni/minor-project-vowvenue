<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:alpha="0.7"
        android:background="@drawable/gradientbg" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@drawable/gradientbg6" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/tvRewardHeader"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="46dp"
            android:fontFamily="@font/hollow"
            android:text="VowCoins"
            android:textColor="@color/white"
            android:textSize="54sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="216dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="154dp"
            android:layout_marginEnd="31dp"
            android:background="#F4EFEF"
            app:cardBackgroundColor="#FAF8FA"
            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/tvRewardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5sp"
                android:text="Earn rewards by completing booking!"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressReward"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="32dp"
                android:progress="30" />

            <TextView
                android:id="@+id/tvRewardPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="100dp"
                android:text="Current Vow Coins: 30"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRedeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75sp"
                android:layout_marginTop="150dp"
                android:text="Redeem Rewards"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="30dp"
            android:background="#61DADADA"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/offerNameTextView"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100sp"
                android:text="Offer"
                android:textColor="#131313"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/offerValidityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="-11dp"
                android:text=" 1) FLAT ₹1000 Off*"
                android:textColor="#3C3636"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="376dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingTop="3sp"
                android:text="     on minimum spend of ₹10,000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="2) FLAT 10% Off + ₹200 Extra Off*"
                android:textColor="#3C3636"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:paddingTop="3sp"
                android:text="      on minimum spend of ₹20,000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="3) FLAT 10% Off + ₹500 Off*"
                android:textColor="#3C3636"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="378dp"
                android:layout_height="30dp"
                android:layout_marginTop="0sp"
                android:paddingTop="3sp"
                android:text="       on minimum spend of ₹50,000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="* use vow coins for avail offer "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* offers valid till  july2024"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* 1 coin = ₹20"
                android:textSize="14sp" />

            <!-- Add more TextViews or other views for additional information -->

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>