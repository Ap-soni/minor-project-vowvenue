<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fitsSystemWindows="false"
            app:contentScrim="@android:color/white"
            app:titleCollapseMode="fade"

            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            >


            <ImageButton
                android:id="@+id/chaatstalls"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="110sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/chaatimage"
                android:text="chaat"
                tools:ignore="SpeakableTextPresentCheck">

            </ImageButton>
            <TextView
                android:layout_marginStart="110sp"
                android:layout_marginTop="80sp"
                android:text="Chaat Stalls"
                android:textSize="12sp"
                android:textColor="	#636363"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView> <ImageButton
            android:id="@+id/cakes"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginStart="25sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/cake"
            android:text="chaat"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>
            <TextView
                android:layout_marginStart="40sp"
                android:layout_marginTop="80sp"
                android:text="Cakes"
                android:textSize="12sp"
                android:textColor="	#636363"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <ImageButton
                android:id="@+id/bartenders"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="200sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/bartender"
                android:text="Bartenders"
                tools:ignore="SpeakableTextPresentCheck">

            </ImageButton>

            <TextView
                android:layout_marginStart="205sp"
                android:layout_marginTop="80sp"
                android:text="Bartenders"
                android:textSize="12sp"
                android:textColor="	#636363"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <ImageButton
                android:id="@+id/drinkstall"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginStart="285sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/drinkstall"
                android:text="chaat"
                tools:ignore="SpeakableTextPresentCheck">

            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="289sp"
                android:textSize="12sp"
                android:layout_marginTop="80sp"
                android:fontFamily="sans-serif-medium"
                android:text="Drink Stalls"
                android:textColor="	#636363"></TextView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15sp"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="105sp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:background="@drawable/pngwing"
                    android:layout_width="64dp"
                    android:layout_marginStart="5sp"
                    android:layout_height="64dp"></ImageView>

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="4dp"
                        android:text="Use Code:"
                        android:textColor="@color/gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/codetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="4dp"
                    android:text="code"
                    android:textAllCaps="true"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/offertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Offer"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/assetdeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Offer"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <ImageView
                    android:background="@drawable/tagred"
                    android:layout_width="34dp"
                    android:layout_marginStart="325sp"
                    android:layout_height="34dp"></ImageView>

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="337sp"
                    android:layout_marginTop="24sp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24">

                </ImageView>


            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:background="@drawable/transparentcurve2"
                android:fitsSystemWindows="true"
                app:collapseIcon="@drawable/transparentcurve2"
                app:layout_collapseMode="pin">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:iconifiedByDefault="false"
                    app:queryHint="Search Your Vow Caters Here"
                    app:queryBackground="@android:color/transparent"
                    style="@style/CustomSearchViewStyle"
                    android:textColorHint="@color/white"
                    ></androidx.appcompat.widget.SearchView>


            </androidx.appcompat.widget.Toolbar>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sortbtn"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="200sp"
                android:background="@drawable/strokesgray"
                android:drawableEnd="@drawable/sort_24"
                android:drawablePadding="-24sp"
                android:drawableTint="#3b3b3b"
                android:fontFamily="@font/arial"
                android:text="Sort"
                android:textAllCaps="false"
                android:textColor="#3b3b3b"
                tools:ignore="TouchTargetSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/localitybtn"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginStart="105sp"
                android:layout_marginTop="200sp"
                android:background="@drawable/strokesgray"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                android:drawablePadding="-24sp"
                android:drawableTint="#3b3b3b"
                android:text="Locality"
                android:textAllCaps="false"
                android:textColor="#3b3b3b"
                tools:ignore="TouchTargetSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pricebtn"
                android:layout_width="110dp"
                android:layout_height="40sp"
                android:layout_marginStart="227sp"
                android:layout_marginTop="200sp"
                android:background="@drawable/strokesgray"
                android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
                android:drawablePadding="-24sp"
                android:drawableTint="#3b3b3b"
                android:text="Price"
                android:textAllCaps="false"
                android:textColor="#3b3b3b"
                tools:ignore="TouchTargetSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <ImageButton
                android:id="@+id/filerbtn"
                android:layout_width="50dp"
                android:layout_height="40sp"
                android:layout_marginStart="350sp"
                android:layout_marginTop="200sp"
                android:background="@drawable/filtericonvertical"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></ImageButton>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:background="@drawable/coordinatorbg"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/headingoffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="30sp"
                android:text="Best offers for you"
                android:textColor="@color/black"
                android:textSize="17dp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="30sp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="20dp"
                        android:layout_marginVertical="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/catering1"
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/catering1"
                            tools:ignore="SpeakableTextPresentCheck">
                        </ImageButton>
                        <TextView
                            android:layout_marginVertical="20dp"
                            android:id="@+id/textView7"
                            android:layout_marginLeft="185sp"
                            android:layout_width="125sp"
                            android:layout_height="170sp"
                            android:paddingStart="10sp"
                            android:fontFamily="@font/bristleradiant"
                            android:background="@drawable/strokesbgwhf"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:text="Don't\nthink.\nBook in a\nblink!\n\nBook now\n@VowVenue" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="160sp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/hollow"
                            android:text="₹299"
                            android:textColor="@color/white"
                            android:textSize="80sp" />


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginHorizontal="30sp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginVertical="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/catering2"
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/catering2"
                            tools:ignore="SpeakableTextPresentCheck">
                        </ImageButton>
                        <TextView
                            android:layout_marginVertical="20dp"
                            android:id="@+id/textView9"
                            android:layout_marginLeft="10sp"
                            android:layout_width="145sp"
                            android:layout_height="wrap_content"
                            android:paddingStart="10sp"
                            android:text="Enjoy Vow OFfers"
                            android:fontFamily="@font/motionpictures"
                            android:textColor="@color/white"
                            android:textSize="50sp"
                            />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="80sp"
                            android:layout_height="100dp"
                            android:layout_marginTop="150sp"
                            android:layout_marginLeft="240sp"
                            android:paddingTop="5sp"
                            android:alpha="0.9"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="25sp"
                            android:fontFamily="@font/lobster"
                            android:background="@drawable/gradientbg2"
                            android:text="upto \n50% \noff" />


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginHorizontal="30sp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginVertical="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/catering3"
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/catering3"
                            tools:ignore="SpeakableTextPresentCheck">
                        </ImageButton>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_marginTop="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latest Drops"
                            android:textSize="35sp"
                            android:fontFamily="@font/bristleradiant"
                            android:textColor="@color/white"/>

                        <TextView

                            android:id="@+id/textView12"
                            android:paddingStart="15sp"
                            android:fontFamily="@font/scarystory"
                            android:layout_marginTop="65sp"
                            android:textSize="35sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check out our \nLatest Additions" />




                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="15sp"
                android:background="@drawable/strokesbgwhite"
                android:text="@string/offerstring"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TouchTargetSizeCheck,TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:id="@+id/handpicked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="30sp"
                android:text="Handpicked for you"
                android:textColor="@color/black"
                android:textSize="17dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cateringrecyclerview2"
                android:layout_marginHorizontal="10sp"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>




            <TextView
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:paddingStart="30sp"
                android:fontFamily="sans-serif-medium"
                android:text="Continue Your Search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cateringrecyclerview1"
                android:layout_marginHorizontal="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/searchingcartoon"
                android:layout_height="wrap_content"></ImageView>





        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>






