
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="caterings.bottomfilter.pricebottom"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coordinatorbg"
        android:orientation="horizontal"
        tools:context=".overview">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Price bucket"
            android:textColor="@color/black"
            android:textSize="24dp"
          ></TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Excluding taxes &amp; fees"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="18sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:background="@drawable/strokesbgwhite"
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            android:text="₹400 - ₹599"
            android:textAlignment="textStart"
            android:textColor="#655B5B"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:background="@drawable/strokesbgwhite"
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            android:text="₹600 - ₹799"
            android:textAlignment="textStart"
            android:textColor="#655B5B"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:background="@drawable/strokesbgwhite"
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            android:text="₹800 - ₹999"
            android:textAlignment="textStart"
            android:textColor="#655B5B"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="18sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:background="@drawable/strokesbgwhite"
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            android:text="₹1000 - ₹1599"
            android:textAlignment="textStart"
            android:textColor="#655B5B"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:background="@drawable/strokesbgwhite"
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            android:text="₹1600 - ₹2599"
            android:textAlignment="textStart"
            android:textColor="#655B5B"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-black"
        android:text="Price range"
        android:textColor="@color/black"
        android:textSize="22dp"
        ></TextView>

    <ImageView
        android:src="@drawable/graphmountain"
        android:layout_width="match_parent"
        android:layout_height="100sp">

    </ImageView>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:background="@drawable/strokesbgwhite"
            android:hint="Enter Minimum "
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:background="@drawable/strokesbgwhite"
            android:hint="Enter Maximum "
            android:paddingStart="15sp"
            android:paddingTop="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="7sp"
            tools:ignore="TouchTargetSizeCheck">

        </EditText>


    </LinearLayout>


</LinearLayout>