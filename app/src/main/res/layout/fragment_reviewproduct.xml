<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="8dp"
    tools:context="Reviews.reviewproduct">

    <TextView
        android:layout_marginTop="25sp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="18sp"

        android:layout_height="wrap_content"
        android:text="How would you rate it ?" />
    <LinearLayout
        android:layout_marginHorizontal="5sp"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_star"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>
        <ImageButton
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_star"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>
        <ImageButton
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_star"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>
        <ImageButton
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_star"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>
        <ImageButton
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_star"
            tools:ignore="SpeakableTextPresentCheck">

        </ImageButton>

    </LinearLayout>
    <TextView
        android:layout_marginTop="25sp"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Share a video or photo ">
    </TextView>

    <ImageButton
        android:id="@+id/imagereview"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        app:tint="@color/gray"
        android:background="@drawable/strokesgraydotted"
        android:layout_marginHorizontal="5sp"
        android:layout_marginVertical="15sp"
        android:padding="35sp"
        android:scaleType="fitCenter"
        android:src="@drawable/addphotocamera"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5sp"
        android:text="Title your review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <EditText
        android:id="@+id/reviewtitle"
        android:layout_marginVertical="10sp"
        android:background="@drawable/strokesgray2"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:paddingStart="15sp"
        android:maxLines="1"
        android:hint="What's most important to know ?"
        android:layout_height="50sp"></EditText>
    <TextView
        android:text="Write your review"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ideas "
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#585858"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:src="@android:drawable/ic_dialog_info"
            app:tint="#585858"
            android:paddingTop="5dp"
            android:layout_width="13sp"
            android:layout_height="match_parent">

        </ImageView>
        <TextView
            android:layout_marginHorizontal="10sp"
            android:text="Misinformation,  Misleads, Allegations "
            android:fontFamily="sans-serif-light"
            android:textColor="#585858"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <EditText
        android:id="@+id/review"
        android:background="@drawable/strokesgray2"
        android:paddingHorizontal="15sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="What did you like or dislike ? What did you \n use this service for ? "
        android:layout_marginVertical="15sp"
        android:layout_width="match_parent"
        android:layout_height="150sp">

    </EditText>

    <ProgressBar
        android:id="@+id/progressBar2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ProgressBar>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbtn"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:layout_marginHorizontal="25sp"
        android:background="@drawable/strokesgray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout></layout>