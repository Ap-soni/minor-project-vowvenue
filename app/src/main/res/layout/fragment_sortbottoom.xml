<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/coordinatorbg"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coordinatorbg"
        android:orientation="vertical"
        tools:context=".overview">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Sort By"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:src="@drawable/popularity"></ImageView>

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/strokesblack"
                android:backgroundTint="@color/black"
                android:text="Popularity"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:src="@drawable/mouse"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/strokesblack"
                android:backgroundTint="@color/black"
                android:text="Nearest first"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:src="@drawable/star"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/strokesblack"
                android:backgroundTint="@color/black"
                android:text="Guest rating"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:src="@drawable/up"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/strokesblack"
                android:backgroundTint="@color/black"
                android:text="Price - High to Low"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:src="@drawable/market"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/strokesblack"
                android:backgroundTint="@color/black"
                android:text="Price - Low to High"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>