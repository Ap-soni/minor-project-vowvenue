<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="3dp"
                android:background="@drawable/img_7"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>


            <TextView
                android:text="Send Message "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="sans-serif-black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>

        <ImageView
            android:layout_marginTop="10sp"
            android:background="@drawable/img_9"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="Full  Name"
            android:layout_marginTop="15sp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/strokesbgblue"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawableTint="@color/gray"
            android:hint="Enter Full Name"
            android:paddingStart="20dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="Function type"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>
        <RadioGroup
            android:layout_marginHorizontal="15sp"
            android:id="@+id/genderRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/weddingRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:padding="5sp"
                android:text="Pre Wedding"
                android:textSize="13sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/wedRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_marginHorizontal="25sp"
                android:text="Wedding"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/otherRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="Other"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="Function time"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>
        <RadioGroup
            android:layout_marginHorizontal="15sp"
            android:id="@+id/timefunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/evening"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:padding="5sp"
                android:text="Evening"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_marginHorizontal="25sp"
                android:text="Day"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="Email Address"
            android:layout_marginTop="15sp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/strokesbgblue"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawableTint="@color/gray"
            android:hint="Enter email address"
            android:paddingStart="20dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="Pick Date"
            android:layout_marginTop="15sp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>

        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="No.of guests"
            android:layout_marginTop="15sp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>

        <EditText
            android:id="@+id/no.guest"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/strokesbgblue"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawableTint="@color/gray"
            android:hint="Enter No.of guest"
            android:paddingStart="20dp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingStart="55dp"
            android:text="No.of rooms"
            android:layout_marginTop="15sp"
            android:textColor="@color/gray"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck"></TextView>

        <EditText
            android:id="@+id/no.rooms"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@drawable/strokesbgblue"
            android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
            android:drawableTint="@color/gray"
            android:hint="Enter No.of rooms"
            android:paddingStart="20dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:layout_width="350sp"
            android:layout_height="40sp"
            android:layout_marginHorizontal="25sp"
            android:layout_marginVertical="20sp"
            android:alpha="0.65"
            android:background="@drawable/strokesbgblue"
            android:fontFamily="sans-serif-black"
            android:text="Check Availibility and book"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck">

        </Button>



    </LinearLayout>
</layout>